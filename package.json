{
  "name": "xp-web",
  "version": "0.7.0",
  "private": true,
  "packageManager": "bun@1.0.18",
  "author": {
    "email": "gpks556@gmail.com",
    "name": "AsherJingkongChen"
  },
  "bugs": "https://github.com/AsherJingkongChen/xp-web/issues",
  "dependencies": {
    "@unhead/vue": "^1.8.9",
    "pinia": "^2.1.7",
    "vite": "5.0.9",
    "vue": "^3.3.13",
    "vue-router": "^4.2.5"
  },
  "description": "Web package of XP (Any file previewer)",
  "devDependencies": {
    "@types/node": "^18.19.2",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "critters": "^0.0.20",
    "cypress": "~12.17.0",
    "gh-pages": "^6.1.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "typescript": "~5.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-webfont-dl": "^3.9.1",
    "vite-ssg": "^0.23.5",
    "vite-ssg-sitemap": "^0.6.1",
    "vue-tsc": "^1.8.25"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/AsherJingkongChen/xp-web",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AsherJingkongChen/xp-web.git"
  },
  "scripts": {
    "build": "run-p type-check build-only",
    "build-only": "vite-ssg build -c vite.config.ts",
    "deploy": "run-s prepublish gh-pages:deploy",
    "dev": "vite -c vite.config.ts",
    "format": "prettier --write .",
    "prepublish": "run-s format && run-p build gh-pages:build test:unit",
    "preview": "vite preview -c vite.config.ts",
    "test": "run-p test:e2e test:unit",
    "test:e2e": "cypress run --e2e",
    "test:gui": "cypress open",
    "test:unit": "cypress run --component",
    "type-check": "vue-tsc --build --force",
    "gh-pages:build": "run-p type-check gh-pages:build-only && run-s gh-pages:copy-404.html",
    "gh-pages:build-only": "vite-ssg build -c vite.config.gh-pages.ts",
    "gh-pages:copy-404.html": "cd dist-gh-pages/xp-web && cp index.html 404.html",
    "gh-pages:dev": "vite -c vite.config.gh-pages.ts",
    "gh-pages:deploy": "cd dist-gh-pages/xp-web && gh-pages -d .",
    "gh-pages:preview": "vite preview -c vite.config.gh-pages.ts"
  },
  "type": "module"
}
